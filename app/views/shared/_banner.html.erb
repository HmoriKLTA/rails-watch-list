<div class="banner mb-3 position-relative" style="overflow: hidden;">
  <img src="<%= asset_path('film-banner.jpg') %>"
       alt="Film Banner"
       class="w-100 h-100 position-absolute top-0 start-0"
       style="object-fit: cover; z-index: 1;">
  <div class="position-absolute top-0 start-0 w-100 h-100"
       style="background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)); z-index: 2;"></div>
  <div class="container position-relative" style="z-index: 3;">
    <h1>Movie List</h1>
    <%= link_to root_path, class:"btn btn-gradient fa-solid fa-house btn-lg", style:"height:auto" do  %>
    <% end %>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-gradient" %>
  </div>
</div>
